<?xml version="1.0" encoding="utf-8"?>
<xyz.arkarhein.news.viewpods.LoginUserViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_background_height"
        android:id="@+id/iv_navigation_background"
        android:src="@drawable/navigation_background"
        android:scaleType="centerCrop"
        android:tint="#6F000000"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/user_picture_width"
            android:layout_height="@dimen/user_picture_height"
            android:id="@+id/iv_user_picture"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:src="@drawable/user_picture"/>

        <ImageView
            android:layout_width="@dimen/user_picture_medium_width"
            android:layout_height="@dimen/user_picture_medium_height"
            android:src="@drawable/user_picture"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="Pyae Phyo Maung"
            android:layout_below="@id/iv_user_picture"
            android:layout_alignLeft="@id/iv_user_picture"
            android:textSize="@dimen/text_regular"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:textColor="@color/white_full"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone_number"
            android:text="09969705428"
            android:textSize="@dimen/text_regular"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/iv_user_picture"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/white_full"/>
    </RelativeLayout>



</xyz.arkarhein.news.viewpods.LoginUserViewPod>